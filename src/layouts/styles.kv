#:kivy 1.10


<Button>:
    background_color: 0, 0.59, 0.53, 1.0

<ImageButton@Button>:
    source: None
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down: ''
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    on_press: self.background_color = (1, 1, 1, 0.5)
    on_release: self.background_color = (0, 0, 0, 0)

    Image:
        source: root.source
        pos: root.pos
        size: root.size

<Panel>:
    pos: self.parent.pos
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        Rectangle:
            size: self.size
            pos: self.pos