#:kivy 1.10

<OperatePanel>:
    padding: [10, 10, 10, 10]
    size_hint: 0.25, 0.1
    pos_hint: {'bottom': 1, 'x': 0.375}
    ImageButton:
        source: 'images/play.png'
    ImageButton:
        source: 'images/stop.png'
    ImageButton:
        source: 'images/menu.png'
        on_press: root.dispatch('on_menu')

<MenuPanel>:
    size_hint: 0.25, 1.0
    pos_hint: {'right': 1}

<GameOfLife>:
    menu_panel: _menu_panel
    operate_panel: _operate_panel

    padding: [10, 10, 10, 10]
    canvas.before:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    FloatLayout:
        MenuPanel:
            id: _menu_panel
        OperatePanel:
            id: _operate_panel