#:kivy 1.10

<GameOfLife@BoxLayout>:
    padding: [10, 10, 10, 10]
    canvas.before:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    canvas:
        Color:
            rgba: 0, 1, 0, 0.8
        Rectangle:
            pos: 10, 10
            size: 10, 10
    FloatLayout:
        BoxLayout:
            size_hint: 0.25, 1.0
            pos_hint: {'right': 1}
            pos: self.parent.pos
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: 0.25, 0.1
            pos_hint: {'bottom': 1, 'x': 0.375}
            pos: self.parent.pos
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    size: self.size
                    pos: self.pos