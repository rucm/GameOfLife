#:kivy 1.10

<OperatePanel>:
    padding: [10, 10, 10, 10]
    size_hint: 0.25, 0.1
    pos_hint: {'bottom': 1, 'center_x': 0.5}
    ImageButton:
        source: 'images/play.png'
        on_press: root.dispatch('on_play')
    ImageButton:
        source: 'images/stop.png'
        on_press: root.dispatch('on_stop')
    ImageButton:
        source: 'images/random.png'
        on_press: root.dispatch('on_random')
    ImageButton:
        source: 'images/menu.png'
        on_press: root.dispatch('on_menu')

<MenuPanel>:
    size_hint: 0.32, 1.0
    pos_hint: {'right': 2}


<CellGridPanel>:
    size: (780, 520)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5, 'center_y': 0.55}


<GameOfLife>:
    cell_grid: cell_grid
    menu: menu
    operate: operate
    canvas.before:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    FloatLayout:
        CellGridPanel:
            id: cell_grid
        MenuPanel:
            id: menu
        OperatePanel:
            id: operate