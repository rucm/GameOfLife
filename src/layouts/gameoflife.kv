#:kivy 1.10

<OperatePanel>:
    padding: [10, 10, 10, 10]
    size_hint: 0.25, 0.1
    pos_hint: {'bottom': 1, 'center_x': 0.5}
    ImageButton:
        source: 'images/play.png'
        on_press: root.dispatch('on_play')
    ImageButton:
        source: 'images/stop.png'
    ImageButton:
        source: 'images/menu.png'
        on_press: root.dispatch('on_menu')

<MenuPanel>:
    size_hint: 0.32, 1.0
    pos_hint: {'right': 2}


<CellGrid>:
    padding: [1, 1, 1, 1]
    spacing: [1, 1]
    cols: self.cols
    pos: self.parent.pos
    size: (780, 520)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5, 'center_y': 0.55}
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            size: self.size
            pos: self.pos


<GameOfLife>:
    cell_grid: cell_grid
    menu_panel: menu_panel
    operate_panel: operate_panel
    canvas.before:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    FloatLayout:
        CellGrid:
            id: cell_grid
        MenuPanel:
            id: menu_panel
        OperatePanel:
            id: operate_panel