#:kivy 1.10

<OperatePanel>:
    padding: [10, 10, 10, 10]
    size_hint: 0.25, 0.1
    pos_hint: {'bottom': 1, 'center_x': 0.5}
    ToggleImageButton:
        id: play
        normal: 'images/play.png'
        down: 'images/play_down.png'
        on_press: root.dispatch('on_play')
    ToggleImageButton:
        id: stop
        disabled: True
        normal: 'images/stop.png'
        down: 'images/stop_down.png'
        on_press: root.dispatch('on_stop')
    ImageButton:
        source: 'images/random.png'
        on_press: root.dispatch('on_randomize')
    ImageButton:
        source: 'images/info.png'
        on_press: root.dispatch('on_toggle_info')

<InfoPanel>:
    size_hint: 0.32, 1.0
    pos_hint: {'right': 2}
    padding: 5, 5, 5, 5
    GridLayout:
        rows: 4
        cols: 1
        Information:
            id: speed
            title: 'Speed'
        BoxLayout:
            orientation: 'horizontal'
            height: 60
            size_hint_y: None
            Information:
                id: cols
                title: 'Cols'
            Information:
                id: rows
                title: 'Rows'
        BoxLayout:
            orientation: 'horizontal'
            height: 60
            size_hint_y: None
            Information:
                id: living_cells
                title: 'Liveing Cells'
            Information:
                id: dead_cells
                title: 'Dead Cells'

<CellGridPanel>:
    size: (780, 520)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5, 'center_y': 0.55}


<GameOfLife>:
    cell_grid: cell_grid
    info: info
    operate: operate
    canvas.before:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    FloatLayout:
        CellGridPanel:
            id: cell_grid
        InfoPanel:
            id: info
        OperatePanel:
            id: operate