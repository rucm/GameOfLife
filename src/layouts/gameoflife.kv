#:kivy 1.10

<GameOfLife@BoxLayout>:
    padding: [10, 10, 10, 10]
    canvas.before:
        BorderImage:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    FloatLayout:
        BoxLayout:
            size_hint: 0.25, 1.0
            pos_hint: {'right': 1}
            pos: self.parent.pos
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.4
                Rectangle:
                    size: self.size
                    pos: self.pos